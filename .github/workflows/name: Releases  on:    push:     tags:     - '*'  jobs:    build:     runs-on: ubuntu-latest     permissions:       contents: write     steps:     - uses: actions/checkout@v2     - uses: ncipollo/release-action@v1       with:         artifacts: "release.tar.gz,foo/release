name: Releases

on: 
  push:
    tags:
    - 'v1.0.2'

jobs:

  build:
    runs-on: ubuntu-latest
    permissions:
      contents: write
    steps:
    - uses: actions/checkout@v2
    - uses: ncipollo/release-action@v1
      with:
        artifacts: "release.tar.gz,"
        bodyFile: "body.md"
        token: ${{ secrets.GITHUB_TOKEN }}
